<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ad.adeverywhere.ui.common.UserInfoActivity">
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:background="@color/colorMainStyle">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView style="@style/text_for_me"
                android:text="@string/userinfo_head" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:src="@drawable/user_head"
                android:layout_weight="1.0" />
            <ImageButton style="@style/right_arrow_image"
                android:id="@+id/btHead"/>
        </TableRow>
        <TableRow><View style="@style/separator_for_text" android:layout_span="2" android:layout_weight="1"/></TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView style="@style/text_for_me"
                android:text="@string/contact_addr" />

            <TextView style="@style/text_for_me_content"
                android:id="@+id/txAddr"
                android:text="@string/not_bind"
                android:layout_weight="1"/>

            <ImageButton style="@style/right_arrow_image"
                android:id="@+id/btAddr"
                android:onClick="onBindClicked"/>

        </TableRow>
        <TableRow><View style="@style/separator_for_text" android:layout_span="2" android:layout_weight="1"/></TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView style="@style/text_for_me"
                android:text="@string/contact_phone" />

            <TextView style="@style/text_for_me_content"
                android:id="@+id/txPhone"
                android:text="@string/not_bind"
                android:layout_weight="1"/>

            <ImageButton style="@style/right_arrow_image"
                android:id="@+id/btPhone"
                android:onClick="onBindClicked"/>

        </TableRow>
        <TableRow><View style="@style/separator_for_text" android:layout_span="2" android:layout_weight="1"/></TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView style="@style/text_for_me"
                android:text="@string/contact_email" />

            <TextView style="@style/text_for_me_content"
                android:id="@+id/txEmail"
                android:text="@string/not_bind"
                android:layout_weight="1"/>

            <ImageButton style="@style/right_arrow_image"
                android:id="@+id/btEmail"
                android:onClick="onBindClicked"/>

        </TableRow>
        <TableRow><View style="@style/separator_for_text" android:layout_span="2" android:layout_weight="1"/></TableRow>
    </TableLayout>
    <Button style="@style/main_action_button"
        android:text="@string/cert_submit"
        android:id="@+id/btSubmit" />

</LinearLayout>
